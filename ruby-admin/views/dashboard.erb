<!DOCTYPE html>
<html>
<head>

    <title>User Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        table {
            width: 70%;
            margin: 0 auto;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f5f5f5;
        }

        tr:hover {
            background-color: #f9f9f9;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 8px 16px;
            border: none;
            cursor: pointer;
            border-radius: 4px;
            margin-right: 5px;
        }

        button:hover {
            background-color: #45a049;
        }

        button:active {
            background-color: #3e8e41;
        }
    </style>
</head>
<body>
    <script>
        function banUser(userId) {
            fetch('/admin/ban', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    userId: userId
                })
            }).then(response => {
                if (response.ok) {
                    console.log('User has been banned')
                } else {
                    console.log('Failed to ban user')
                }
            })
        }


        function unbanUser(userId) {
            fetch('/admin/unban', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    userId: userId
                })
            }).then(response => {
                if (response.ok) {
                    console.log('User has been unbanned')
                } else {
                    console.log('Failed to unban user')
                }
            })
        }
    </script>
    <button onclick="window.location.href = '/admin/logout'">Logout</button>
    <h1>User Dashboard</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user['id'] %></td>
                    <td <% if user['banned'] %>style="color: red;"<% end %>><%= h(user['username']) %></td>
                    <td><%= user['role'] %></td>
                    <td>
                        <% if user['banned'] %>
                            <button onclick="unbanUser('<%= user['id'] %>')">Unban</button>
                        <% else %>
                            <button onclick="banUser('<%= user['id'] %>')" style="background-color: red;">Ban</button>
                        <% end %>
                    </td>
                    </td>
                </tr>
                </tr>
            <% end %>
        </tbody>
    </table>
    </table>
</body>
</html>
